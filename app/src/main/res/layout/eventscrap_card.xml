<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_marginTop="2dp"
              android:layout_marginBottom="2dp"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/eventscrap_map_marker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorBlack"
                android:background="@drawable/ic_calendar"
                />

            <TextView
                android:id="@+id/eventscrap_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/eventscrap_map_marker"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/eventscrap_tags"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventscrap_name"/>





        </RelativeLayout>

        <TextView
            android:id="@+id/eventscrap_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"/>

    </android.support.v7.widget.CardView>




</LinearLayout>
