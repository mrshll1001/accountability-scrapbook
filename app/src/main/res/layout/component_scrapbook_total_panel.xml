<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/total_panel_total"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="Total"
        android:layout_margin="5dp"
        />

<LinearLayout
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/total_panel_total"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/total_panel_camera_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_menu_camera"
        android:backgroundTint="@color/colorBlack"
        android:layout_below="@+id/total_panel_total"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/total_panel_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photos"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:id="@+id/total_panel_spend_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_coin_stack"
        android:backgroundTint="@color/colorBlack"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/total_panel_spends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spends"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/total_panel_spend_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:text="(xx)"
        android:textSize="10dp"
        />

    <ImageView
        android:id="@+id/total_panel_quote_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_quotebubble"
        android:backgroundTint="@color/colorBlack"

        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/total_panel_quotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quotes"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:id="@+id/total_panel_event_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/ic_calendar_clock"
        android:backgroundTint="@color/colorBlack"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/total_panel_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events"
        android:textColor="@color/colorBlack"/>


</LinearLayout>




</LinearLayout>