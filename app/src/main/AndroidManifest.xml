<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.mrshll.matt.accountabilityscrapbook">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission
        android:name="android.permission.INTERNET" />

    <application
        android:name=".ScrapbookApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDTxNyZRcCDTMa3n_g51lJKqwi3iOBVPBo"/>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="uk.mrshll.matt.accountabilityscrapbook.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"
                />
        </provider>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateScrapbookActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".AddPhotoscrapActivity"
            android:label="Add a Photo Scrap"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddSpendscrapActivity"
            android:label="Add a Spend Scrap"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddQuotescrapActivity"
            android:label="Add a Quote Scrap"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddEventscrapActivity"
            android:label="Add an Event Scrap"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>